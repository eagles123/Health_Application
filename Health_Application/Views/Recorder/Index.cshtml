@model Health_Application.Models.UserData

@{
    ViewBag.Title = "RecordPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="background-image: url(/img/bg3.jpg); background-repeat:no-repeat; background-size: 80%;">
    <div class="container-fluid" style="margin:55px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Calculate and record your Calorie</h4>
                    <br />

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="ProteinIntake">Protein Consumption</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.ProteinIntake, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ProteinIntake, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="CarbonIntake">CarbonHydrate Consumption</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.CarbonIntake, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CarbonIntake, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="FatIntake">Fat Consumption</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.FatIntake, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FatIntake, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="CalorieIntake">Your Calorie</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.CalorieIntake, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CalorieIntake, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CalorieComsumption, htmlAttributes: new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.CalorieComsumption, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CalorieComsumption, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Distance, htmlAttributes: new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Distance, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Distance, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    <footer>
        <p>Posted by: Hege Refsnes</p>
        <p>
            Contact information: <a href="mailto:someone@example.com">
                someone@example.com
            </a>.
        </p>
    </footer>   
</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
